#header(ng-switch=true on="sign_up_status()")
  %input#back_btn(type="button" ng-tap="$navigate.go('/', 'slide')" value="返回" )
  %a 报名
  %input(ng-switch-when="started" type="button" ng-tap="end_apply()" value="结束报名" )
  %input(ng-switch-default=true type="button" ng-tap="start_apply()" value="开始报名" )
#wrapper
  #scroller
    %ul#player_list
      %li(ng-repeat="player in players")
        %a {{player}}
#footer
  .row
    .small-6.columns
      %a.button(ng-tap="$navigate.go('/sign_ups/list/{{activity_name}}')") 报名
    .small-6.columns
      %a.button(ng-tap="$navigate.go('/bids/list/{{activity_name}}')") 竞价

